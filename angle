using System;
					
public class Program
{
	public static void Main()
	{
		Console.WriteLine("try to creat a angle:");
		int x = int.Parse(Console.ReadLine());
		
		for(int i=0; i < x; i++)
		{
			Console.Write("\t");                          //// tab - כמו  המקש במחשב מקנה רווח 
			
			for( int j=0; j < i; j++)
			{
				Console.Write("*");
			}

			Console.WriteLine("");
		}	
	}
}
